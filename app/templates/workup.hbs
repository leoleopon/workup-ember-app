<style type="text/css">
  .nfoblock {
    border: solid 1px #bfbfbf;
  }
  .row {
    margin: 0 5px 0 5px;
    padding: 0 3px 3px 0;
  }
  .column {
    display: inline-block;
    margin: 5px 0 0 5px !important;
  }
  .textright {
    text-align: right !important;
  }
  .hidden {
    display: none;
  }
  .selected {
    background-color: #2a8fee;
  }
  .editmode input, .editmode select, .editmode div {
    font-style: italic;
  }
  .readonly {
    background-color: #efefef !important;
  }
  .error1 {
    background-color: #ff8080;
  }

</style>
<h2>Тренировка</h2>
<h3>Спортсмен</h3>
<div class="nfoblock">
  <div class="row column">
    <div>ФИО</div>
    <div class="ui input">
      <input class="readonly" type="text" value={{athleteName}} readonly=true />
    </div>
  </div>
  <div class="row column">
    <div>Возраст</div>
    <div class="ui input">
      <input class="textright readonly" type="text" value={{athleteAge}} readonly=true />
    </div>
  </div>
</div>
<h3>Подходы</h3>
<div class="nfoblock">
  <div class="row column">
    <div>№</div>
  </div>
  <div class="row column">
    <div>Упражнение</div>
  </div>
  <div class="row column">
    <div>Продолжительность</div>
  </div>
  <div class="row column">
    <div>Средний пульс</div>
  </div>
  <div class="row column">
    <div>Плановая нагрузка</div>
  </div>
  <div class="row column">
    <div>Фактическая нагрузка</div>
  </div>
  {{#each model.workup.workupSetSheet as |workupSet|}}
    {{workup-set
      selectedIndex=selectedIndex
      model=workupSet
      onComplete=(action "completeEdit")
      onCancel=(action "cancelEdit")
      onSelect=(action "select")}}
  {{/each}}
  <div class="{{if isEditMode 'hidden'}}">
    <div class="column">
      <button class="ui button" {{action "add"}}>Add</button>
      <button class="ui button" {{action "remove"}} disabled={{isRemoveProhibited}}>Remove</button>
      <button class="ui button" {{action "up"}} disabled={{isUpProhibited}}>Up</button>
      <button class="ui button" {{action "down"}} disabled={{isDownProhibited}}>Down</button>
    </div>
    <div class="row" />
  </div>
</div>
<h3>Суммарная информация</h3>
<div class="nfoblock">
  <div class="row column">
    <div>К-во подходов</div>
    <div class="ui input">
      <input class="textright readonly" type="text" value={{count}} readonly=true />
    </div>
  </div>
  <div class="row column">
    <div>Продолжительность</div>
    <div class="ui input">
      <input class="readonly" type="text" value={{duration}} readonly=true />
    </div>
  </div>
  <div class="row column">
    <div>Средний пульс</div>
    <div class="ui input">
      <input class="textright readonly" type="text" value={{averagePulse}} readonly=true />
    </div>
  </div>
  <div class="row column">
    <div>Плановая нагрузка</div>
    <div class="ui input">
      <input class="textright readonly" type="text" value={{estimatedScore}} readonly=true />
    </div>
  </div>
  <div class="row column">
    <div>Фактическая нагрузка</div>
    <div class="ui input">
      <input class="textright readonly" type="text" value={{actualScore}} readonly=true />
    </div>
  </div>
</div>
